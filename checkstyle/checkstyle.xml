<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "http://checkstyle.sourceforge.net/dtds/configuration_1_3.dtd">

<!-- Defina regras de estilo para o projeto -->
<module name="Checker">
    <property name="severity" value="warning"/> <!-- Define o nível de severidade para todo o projeto -->

    <!-- Exemplo de uma regra para verificar nomes de classes -->
    <module name="TypeName">
        <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        <property name="severity" value="high"/> <!-- Alta severidade para classes mal nomeadas -->
    </module>

    <!-- Exemplo de uma regra para checar o comprimento das linhas -->
    <module name="LineLength">
        <property name="max" value="120"/>
        <property name="severity" value="normal"/> <!-- Severidade normal para linhas longas -->
    </module>

    <!-- Exemplo de uma regra para checar espaços em branco excessivos -->
    <module name="WhitespaceAround">
        <property name="severity" value="low"/> <!-- Baixa severidade para espaços em branco -->
    </module>
</module>
